{
  "manifest_version": 3,
  "name": "Tab Flow - Visual Tab Manager & Switcher",
  "short_name": "Tab Flow",
  "version": "1.1.0",
  "description": "A visual Tab Flow with thumbnail previews - navigate tabs with keyboard shortcuts, mouse clicks, or arrow keys",
  "homepage_url": "https://github.com/prabhjot0109/TabFlow",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "storage",
    "scripting",
    "sessions",
    "alarms"
  ],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "commands": {
    "quick-switch": {
      "suggested_key": {
        "default": "Alt+Q",
        "windows": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Quick tab switch (Alt+Tab style - instant)"
    },
    "show-tab-flow": {
      "suggested_key": {
        "default": "Alt+W",
        "windows": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "Show Tab Flow with search"
    },
    "cycle-next-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Cycle to next tab in Flow"
    }
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
